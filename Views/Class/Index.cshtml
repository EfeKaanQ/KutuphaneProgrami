@model IEnumerable<KutuphaneProgrami.Models.Class>
@{
    ViewBag.Title = "Sınıflar";
}
<div style="background:#fff; border-radius:12px; box-shadow:0 2px 8px rgba(31,38,135,0.07); padding:2rem; max-width:900px; margin:0 auto;">
    <h2 style="color:#3a6073;"><i class="fas fa-chalkboard-teacher" style="color:#f39c12; margin-right:0.5rem;"></i>Sınıflar</h2>
    <a href="/Class/Create" style="background:#74ebd5; color:#fff; padding:0.5rem 1rem; border-radius:6px; text-decoration:none; float:right; margin-bottom:1rem; display:inline-flex; align-items:center;">
        <i class="fas fa-plus" style="margin-right:0.3rem;"></i>Sınıf Ekle
    </a>
    <table style="width:100%; margin-top:2rem;border-collapse: collapse;">
        <tr style="background:#f4f6fb; color:#3a6073;">
            <th style="padding:0.5rem; text-align:left; border: 1px solid #ddd">Sınıf Adı</th>
            <th style="padding:0.5rem; text-align:right; border: 1px solid #ddd">İşlemler</th>
        </tr>
        @foreach(var c in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding:0.5rem;border: 1px solid #ddd">
                    <i class="fas fa-graduation-cap" style="color:#3498db; margin-right:0.5rem;"></i>@c.Name
                </td>
                <td style="padding:0.5rem;border: 1px solid #ddd; text-align:right;">
                    <div style="display:flex; gap:0.5rem; align-items:center; justify-content:flex-end;">
                        <a href="/Class/Edit/@c.Id" style="background:#f39c12; color:#fff; padding:0.3rem 0.8rem; border-radius:6px; text-decoration:none; display:inline-flex; align-items:center;">
                            <i class="fas fa-edit" style="margin-right:0.3rem;"></i>Güncelle
                        </a>
                        <a href="/Class/Delete/@c.Id" onclick="return confirm('Bu sınıfı silmek istediğinizden emin misiniz?')" style="background:#e74c3c; color:#fff; padding:0.3rem 0.8rem; border-radius:6px; text-decoration:none; display:inline-flex; align-items:center;">
                            <i class="fas fa-trash" style="margin-right:0.3rem;"></i>Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div> 